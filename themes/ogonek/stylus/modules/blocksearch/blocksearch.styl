$color-1 = #666
$color-2 = #fff
$color-3 = #bbb
$color-4 = #fbfbfb
$color-5 = #646464
$color-6 = rgba(0,0,0,0.10)
$color-7 = #d6d4d4
$color-8 = #686666

#search_block_top
    padding 9px 35px 9px 0px
    float right
    
    @media (max-width: 670px)
        //float left
        //absolute top 0 left 0
        width 100%
        padding 9px 0
        float none

    #searchbox
        float left
        width 100%

    .btn
        &.button-search
            background $color-1
            display block
            position absolute
            top 0
            right 0
            border none
            color $color-2
            width 50px
            line-height 40px
            text-align center
            padding 0
            border-radius 0 15px 15px 0

            span
                display none

            &:before
                content "\f002"
                display block
                font-family "FontAwesome"
                font-size 17px
                width 100%
                text-align center

            &:hover
                color $color-3

    #search_query_top
        display inline
        height 45px
        background $color-4
        height 40px
        width 100%
        float right
        padding 0 60px 0 10px
        background $color-2
        border-radius 15px
        border none
        color $color-5
        box-shadow inset 0 2px 3px $color-6
        

.ac_results
    width 271px
    box-shadow 0px 0px 10px 0px #d0d0d0
    background-color $color-2
    border-radius 5px
    margin 13px 0 0
    padding 15px 0 30px
    text-align right
    z-index 9999

    &::before, &::after
        content ''
        position absolute
        display inline-block
    
    &::before
        top -8px
        left 19px
        border-right 9px solid transparent
        border-bottom 9px solid #ccc
        border-left 9px solid transparent
        border-bottom-color #e6e6e6
    
    &::after
        top -7px
        left 20px
        border-right 8px solid transparent
        border-bottom 8px solid #fff
        border-left 8px solid transparent
    
    &__block
        clear both
        
        &::after
            content ''
            clear both
            display table
    
    &__image
        width 32px
        vertical-align top
        margin 0 10px 0 0
        float left
        
    &__cname, &__pname
        display block
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        
    &__value
        display block
        margin 0 0 0 42px
        font-size 11px
        line-height 12px
        
    &__price
        display block
        color #d34633
        font-weight 800
        
    &__showmore
        position absolute
        padding 0
        right 15px
        bottom 7px
        
    
    ul
        position relative
        display block
        border none
        margin 0
        padding 0
        
    li
        display block
        box-sizing border-box
        padding 5px 10px
        font-weight normal
        text-align left
        color $color-8
        font-size 12px
        line-height 16px
        min-height 48px
        cursor pointer
        
        &:first-child, &:last-child
            padding 10px

        &.ac_odd
            background rgba(253, 167, 2, 0.1)

.ac_results li:hover
.ac_results li.ac_over
    background rgba(253, 167, 2, 0.2)

form
    &#searchbox
        position relative

        label
            color $color-1

        input
            &#search_query_block
                margin-right 10px
                max-width 222px
                margin-bottom 10px
                display inline-block
                float left

        .button
            &.button-small
                float left

                i
                    margin-right 0
